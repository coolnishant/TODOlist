<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_to_do_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_to_do_main"
    tools:context="todolist.mytwistedidea.wordpress.com.todolist.ToDoMainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TODO List"
        android:gravity="center_horizontal"
        android:textSize="20sp"
        android:background="@color/colorPrimaryDark"
        android:textColor="#fff"
        android:id="@+id/tVTodoList"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorPrimary"
        android:layout_marginTop="5dp"
        android:id="@+id/view_line1"/>

    <todolist.mytwistedidea.wordpress.com.todolist.NonScrollableLV
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lVToDo"
        android:layout_alignParentStart="true" />

</LinearLayout>
