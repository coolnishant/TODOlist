<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_todo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="todolist.mytwistedidea.wordpress.com.todolist.AddTODOActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
        android:text=""
        android:hint="Assignment"
        android:textSize="25sp"
        android:background="#B4DBEF"
            android:inputType="textCapSentences|textMultiLine"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/eTinputassignment"
        android:layout_margin="5dp">
        <requestFocus/>
    </EditText>
    </ScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:ems="10"
        android:text="Time"
        android:textSize="30sp"
        android:gravity="center_horizontal"
        android:id="@+id/tVinputassignmenttime" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:gravity="center_horizontal"
        android:textSize="30sp"
        android:text="Date"
        android:id="@+id/tVinputassignmentdate" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:id="@+id/baddassignment"
        android:background="#FFA800"
        android:text="add"
        android:textSize="30sp"
        android:layout_margin="10dp"/>
    </LinearLayout>
</ScrollView>

